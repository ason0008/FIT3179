{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": {
      "url": "https://ason0008.github.io/FIT3179/data/population_increment.json"
    },
    "width": 800,
    "height": 450,
    "params": [{
      "name": "state_selection",
      "value": "Malaysia",
      "bind": {"input": "select", "options": ["Malaysia", "Federal Territory of Kuala Lumpur", "Federal Territory of Labuan", "Federal Territory of Putrajaya", "Johor", "Kedah", "Kelantan", "Pahang", "Penang", "Perak", "Perlis", "Sabah", "Sarawak", "Selangor", "Terengganu"]}
    }],
    "transform": [
      {"filter": "datum.state == state_selection"},
      {"window": [{"op": "sum", "field": "difference", "as": "sum"}]},
      {"window": [{"op": "lead", "field": "year", "as": "lead"}]},
      {
        "calculate": "datum.lead === null ? datum.year : datum.lead",
        "as": "lead"
      },
      {
        "calculate": "datum.year === 'End' ? 0 : datum.sum - datum.difference",
        "as": "previous_sum"
      },
      {
        "calculate": "(datum.year !== '2010' && datum.year !== 'End' && datum.difference > 0 ? '+' : '') + datum.difference",
        "as": "text_amount"
      },
            {
        "calculate": "datum.year === 'End' ? datum.sum : datum.text_amount",
        "as": "text_amount"
      },
      {"calculate": "(datum.sum + datum.previous_sum) / 2", "as": "center"},
      {
        "calculate": "datum.sum < datum.previous_sum ? datum.sum : ''",
        "as": "sum_dec"
      },
      {
        "calculate": "datum.sum > datum.previous_sum ? datum.sum : ''",
        "as": "sum_inc"
      },
          {
        "calculate": "datum.sum < datum.previous_sum ? datum.start_population + datum.sum : ''",
        "as": "label_sum_dec"
      },
      {
        "calculate": "datum.sum > datum.previous_sum ? datum.start_population + datum.sum : ''",
        "as": "label_sum_inc"
      },
      {
        "calculate": "datum.year === 2010 ? datum.start_population : datum.label_sum_inc",
        "as": "label_sum_inc"
      }
    ],
    "encoding": {
      "x": {
        "field": "year",
        "type": "ordinal",
        "sort": null,
        "axis": {"labelAngle": 0, "title": "Year"}
      }
    },
    "layer": [
      {
        "mark": {"type": "bar", "size": 45},
        "encoding": {
          "y": {
            "field": "previous_sum",
            "type": "quantitative",
            "title": "Population Increment"
          },
          "y2": {"field": "sum"},
          "color": {
            "condition": [
              {
                "test": "datum.year === 2010 || datum.year === 'End'",
                "value": "#f7e0b6"
              },
              {"test": "datum.sum < datum.previous_sum", "value": "#f78a64"}
            ],
            "value": "#93c4aa"
          }
        }
      },
      {
        "mark": {
          "type": "rule",
          "color": "#404040",
          "opacity": 1,
          "strokeWidth": 2,
          "xOffset": -22.5,
          "x2Offset": 22.5
        },
        "encoding": {
          "x2": {"field": "lead"},
          "y": {"field": "sum", "type": "quantitative"}
        }
      },
      {
        "mark": {"type": "text", "dy": -4, "baseline": "bottom"},
        "encoding": {
          "y": {"field": "sum_inc", "type": "quantitative"},
          "text": {"field": "label_sum_inc", "type": "nominal"}
        }
      },
      {
        "mark": {"type": "text", "dy": 4, "baseline": "top"},
        "encoding": {
          "y": {"field": "sum_dec", "type": "quantitative"},
          "text": {"field": "label_sum_dec", "type": "nominal"}
        }
      },
      {
        "mark": {"type": "text", "fontWeight": "bold", "baseline": "middle"},
        "encoding": {
          "y": {"field": "center", "type": "quantitative"},
          "text": {"field": "text_amount", "type": "nominal"},
          "color": {
            "condition": [
              {
                "test": "datum.year === 2010 || datum.year === 'End'",
                "value": "#725a30"
              }
            ],
            "value": "white"
          }
        }
      }],
  "config": {
    "view": {"stroke": null}  
  }
}