{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "spacing": 80,
    "hconcat": [
      {
        "data": {
          "name": "ethnic_population",
          "url": "https://ason0008.github.io/FIT3179/data/ethnic_population.json"
        },
        "mark": {"type": "arc", "innerRadius": 35},
        "encoding": {
          "theta": {
            "field": "percentage", 
            "type": "quantitative"
          },
          "color": {
            "field": "ethnicity", 
            "type": "nominal",
            "scale": {"range": ["#234a9e", "#2174b1", "#2fa0c0", "#60c1bf", "#b7e3b5"]},
            "legend": {"title": "Ethnicity"}
          },
          "tooltip": [
            {
              "field": "ethnicity",
              "title": "Ethnicity"
            },
            {
              "field": "percentage",
              "title": "Percentage"
            }
          ]
        },
        "selection": {
          "click": {
            "fields": ["ethnicity"],
            "type": "single",
            "clear": false
          }
        },
        "width": 160,
        "height": 160
      },
      {
        "data": {
          "name": "heatmap",
          "url": "https://ason0008.github.io/FIT3179/data/age_ethnic_state.json"
        },
        "transform": [
          {"filter": {"selection": "click"} },
          {"calculate": "datum.population + 1000", "as": "population"}
        ],
        "mark": "rect",
        "width": 380,
        "height": 400,
        "encoding": {
          "x": {
              "field": "state",
              "type": "nominal",
              "title": "State",
              "scale": {"domain": ["Kuala Lumpur", "Labuan", "Putrajaya", "Johor", "Kedah", "Kelantan", "Pahang", "Penang", "Perak", "Perlis", "Sabah", "Sarawak", "Selangor", "Terengganu"]},
              "axis": {"labelAngle": -45}
          },
          "y": {
              "field": "age",
              "type": "nominal",
              "title": "Age",
              "scale": {"domain": ["85+", "80 - 84", "75 - 79", "70 - 74", "65 - 69", "60 - 64", "55 - 59", "50 - 54", "45 - 49", "40 - 44", "35 - 39", "30 - 34", "25 - 29", "20 - 24",  "15 - 19", "10 - 14", "5 - 9", "0 - 4"]}

          },
          "color": {
            "field": "population",
            "type": "quantitative",
            "scale": {"type": "log"},
            "legend": {
              "title": "Population"
            }
          },
          "tooltip": [
            {
              "field": "ethnicity",
              "title": "Ethnicity"
            },
            {
              "field": "state",
              "title": "State"
            },
            {
              "field": "age",
              "title": "Age"
            },
            {
              "field": "population",
              "title": "Population"
            }
          ]
        }
      }
    ],
    "config": {
      "view": {"stroke": null},
      "axis": {"grid": false, "labelFont": "Overpass", "titleFont": "Overpass"},
      "background": "#fffbf5",
      "legend": {"labelFont": "Overpass", "titleFont": "Overpass"},
      "header": {"labelFont": "Overpass", "titleFont": "Overpass"},
      "mark": {"font": "Overpass"},
      "title": {"font": "Overpass", "fontSize": 16}
    }
  }
  